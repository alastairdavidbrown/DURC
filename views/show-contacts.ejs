<!DOCTYPE html>
<html lang="en">

<head>
	<% include head-frag %>
    <meta name="description" content="Show Contact Reqests from Dundee URC">
</head>

<body>

	<!-- insert the navbar -->
	<% include nav-bar-frag %>
	
	<div class="container">
		<h2>Contacts...</h2>
		<table class="table table-condensed table-striped">
			<thead>
				<tr>
					<th>Date</th>
					<th>Firstname</th>
					<th>Lastname</th>
					<th>Email</th>
					<th>Tel</th>
					<th>Message</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i=0; i<contacts.length; i++) { %>
					<tr>
						<td>
							<%=new String(contacts[i].date).replace(/GMT.*/,'') %>
						</td>
						<td>
							<%=contacts[i].fname %>
						</td>
						<td>
							<%=contacts[i].lname %>
						</td>
						<td>
							<%=contacts[i].email %>
						</td>
						<td>
							<%=contacts[i].phone %>
						</td>
						<td>
							<%=contacts[i].message %>
						</td>
					</tr>
					<% } %>

			</tbody>
		</table>
	</div>

	<% include bootstrap-frag %>

</body>